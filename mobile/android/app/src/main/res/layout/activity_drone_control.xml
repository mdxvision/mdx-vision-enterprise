<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#0A1628"
    android:padding="16dp">

    <!-- Header with status -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Drone Control"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/statusIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Checking..."
            android:textColor="#FFC107"
            android:textSize="12sp"
            android:drawablePadding="4dp" />

    </LinearLayout>

    <!-- Connection status panel -->
    <LinearLayout
        android:id="@+id/connectionCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="#1A237E"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/adapterInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adapter: --"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/sessionInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Session: --"
            android:textColor="#B0BEC5"
            android:textSize="12sp" />

    </LinearLayout>

    <!-- Main content area -->
    <ScrollView
        android:id="@+id/contentScroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Transcript display -->
            <LinearLayout
                android:id="@+id/transcriptCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:background="#263238"
                android:orientation="vertical"
                android:padding="12dp"
                android:layout_marginBottom="8dp"
                tools:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="You said:"
                    android:textColor="#78909C"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/transcriptText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:layout_marginTop="4dp"
                    tools:text="go left 5 meters" />

            </LinearLayout>

            <!-- Parsed command display -->
            <LinearLayout
                android:id="@+id/parsedCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:background="#1B5E20"
                android:orientation="vertical"
                android:padding="12dp"
                android:layout_marginBottom="8dp"
                tools:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Parsed Command:"
                    android:textColor="#A5D6A7"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/intentText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp"
                    tools:text="MOVE_LEFT" />

                <TextView
                    android:id="@+id/normalizedText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#C8E6C9"
                    android:textSize="14sp"
                    android:layout_marginTop="2dp"
                    tools:text="MOVE_LEFT 5.0 meters" />

                <TextView
                    android:id="@+id/confidenceText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#81C784"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp"
                    tools:text="Confidence: 95%" />

            </LinearLayout>

            <!-- Execution result display -->
            <LinearLayout
                android:id="@+id/resultCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:background="#0D47A1"
                android:orientation="vertical"
                android:padding="12dp"
                android:layout_marginBottom="8dp"
                tools:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Result:"
                    android:textColor="#90CAF9"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/resultStatusText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp"
                    tools:text="OK" />

                <TextView
                    android:id="@+id/resultMessageText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#BBDEFB"
                    android:textSize="14sp"
                    android:layout_marginTop="2dp"
                    tools:text="Moved left 5.0 meters" />

            </LinearLayout>

            <!-- Error display -->
            <LinearLayout
                android:id="@+id/errorCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:background="#B71C1C"
                android:padding="12dp"
                android:layout_marginBottom="8dp"
                tools:visibility="visible">

                <TextView
                    android:id="@+id/errorText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    tools:text="Network error: Connection refused" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Confirm button - shown when needed -->
    <Button
        android:id="@+id/confirmButton"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="8dp"
        android:visibility="gone"
        android:text="CONFIRM"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:backgroundTint="#FF6F00"
        tools:visibility="visible" />

    <!-- Execute button - shown for non-confirm commands -->
    <Button
        android:id="@+id/executeButton"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="8dp"
        android:visibility="gone"
        android:text="EXECUTE"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:backgroundTint="#388E3C" />

    <!-- Bottom button layout -->
    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- STOP button - always visible when enabled -->
        <Button
            android:id="@+id/stopButton"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="STOP"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="#D32F2F" />

        <!-- Push-to-talk button -->
        <Button
            android:id="@+id/pttButton"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="2"
            android:layout_marginStart="8dp"
            android:text="ðŸŽ¤ Ready"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:backgroundTint="#1976D2" />

    </LinearLayout>

    <!-- Listening indicator overlay -->
    <FrameLayout
        android:id="@+id/listeningOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#CC000000"
        android:visibility="gone"
        tools:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:gravity="center">

            <ProgressBar
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:indeterminate="true" />

            <TextView
                android:id="@+id/listeningText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Listening..."
                android:textColor="@android:color/white"
                android:textSize="18sp" />

        </LinearLayout>

    </FrameLayout>

    <!-- Disabled overlay -->
    <FrameLayout
        android:id="@+id/disabledOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E6000000"
        android:visibility="gone"
        tools:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Drone Control Disabled"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/disabledMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Set DRONE_CONTROL_ENABLED=true on server"
                android:textColor="#B0BEC5"
                android:textSize="14sp"
                android:gravity="center" />

            <Button
                android:id="@+id/retryButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Retry"
                android:textColor="@android:color/white"
                android:backgroundTint="#455A64" />

        </LinearLayout>

    </FrameLayout>

</LinearLayout>
