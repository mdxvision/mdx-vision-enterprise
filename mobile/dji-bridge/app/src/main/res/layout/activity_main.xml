<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#1a1a2e">

    <!-- Header -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MDx DJI Bridge"
        android:textColor="@android:color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/statusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Initializing..."
        android:textColor="#888888"
        android:textSize="14sp"
        android:layout_marginBottom="24dp" />

    <!-- Connection Status Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#16213e"
        android:padding="16dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/droneStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DJI Air 3: Not Connected"
            android:textColor="@android:color/holo_red_light"
            android:textSize="18sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/batteryText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Battery: --"
            android:textColor="#888888"
            android:textSize="14sp" />

    </LinearLayout>

    <!-- Server Status Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#16213e"
        android:padding="16dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/serverStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bridge Server: Stopped"
            android:textColor="@android:color/holo_orange_light"
            android:textSize="18sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/ipAddressText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="API: http://--:8080"
            android:textColor="#888888"
            android:textSize="14sp"
            android:fontFamily="monospace" />

    </LinearLayout>

    <!-- Spacer -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Control Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/startServerBtn"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="Start Server"
            android:textColor="@android:color/white"
            android:backgroundTint="#0f4c75" />

        <Button
            android:id="@+id/stopServerBtn"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="Stop Server"
            android:textColor="@android:color/white"
            android:backgroundTint="#e94560"
            android:enabled="false" />

    </LinearLayout>

    <!-- Instructions -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="1. Connect RC 2 to DJI Air 3\n2. Start the bridge server\n3. Connect Vuzix glasses to same WiFi\n4. Use voice commands on glasses"
        android:textColor="#666666"
        android:textSize="12sp"
        android:lineSpacingMultiplier="1.5" />

</LinearLayout>
