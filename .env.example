# MDx Vision Enterprise Environment Configuration
# Copy this file to .env and fill in the values

# ===========================================
# Database
# ===========================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=mdxvision
DB_USER=mdx
DB_PASSWORD=your_secure_password

# ===========================================
# Redis
# ===========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ===========================================
# Authentication (Auth0 or Azure AD)
# ===========================================
JWT_ISSUER_URI=https://your-tenant.auth0.com/
JWT_JWK_SET_URI=https://your-tenant.auth0.com/.well-known/jwks.json

# ===========================================
# AssemblyAI (Real-time Transcription)
# ===========================================
ASSEMBLYAI_API_KEY=your_assemblyai_api_key

# ===========================================
# Azure OpenAI (Clinical NLP)
# ===========================================
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your_azure_openai_key
AZURE_OPENAI_DEPLOYMENT=gpt-4

# Alternative: OpenAI Direct
OPENAI_API_KEY=your_openai_api_key

# ===========================================
# Azure Service Bus (Message Queue)
# ===========================================
AZURE_SERVICEBUS_CONNECTION_STRING=

# ===========================================
# Azure SignalR (Real-time)
# ===========================================
AZURE_SIGNALR_CONNECTION_STRING=

# ===========================================
# Epic FHIR Integration
# ===========================================
EPIC_CLIENT_ID=your_epic_client_id
EPIC_BASE_URL=https://fhir.epic.com/interconnect-fhir-oauth
EPIC_TOKEN_URL=https://fhir.epic.com/interconnect-fhir-oauth/oauth2/token
EPIC_AUTHORIZE_URL=https://fhir.epic.com/interconnect-fhir-oauth/oauth2/authorize
